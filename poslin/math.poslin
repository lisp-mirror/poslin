math p* !

math
1-
[ 1 - &
]@p

math
1+
[ 1 + &
]@p

math
*2
[ 2 * &
]@p

math
/2
[ 2 / &
]@p

math
^2
[ § &
  * &
]@p

math
triangle
[ § &
  math 1+ ?p
  * &
  math /2 ?p
]@p

math
fact
{ n arg
  n &v
  1 <= &
    [ 1 ]
    [ n &v
      math 1- &p
      math fact '!p &
      n &v
      * &
    ]
  <?>!
  ^<- &
}@p

math
choose
{ r arg
  n arg
  n &v math fact &p
  n &v r &v - &
  math fact &p
  r &v math fact &p
  * &
  / &
  ^<- &
}@p